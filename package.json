{
	"name": "vscode-mezzurite",
	"displayName": "Mezzurite",
	"version": "0.0.1",
	"private": false,
	"description": "Instrument your application with the Mezzurite SDK quickly and easily with this extension.",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./client/out/extension",
	"scripts": {
		"compile": "tsc -b",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "mezzuriteComponentList",
					"name": "Mezzurite Component Tracking"
				}
			]
		}
	},
	"activationEvents": [
		"*"
	],
	"devDependencies": {
		"@types/jest": "29.5.12",
		"@types/node": "20.11.30",
		"jest": "29.7.0",
		"ts-jest": "29.1.2",
		"tslint-config-semistandard": "8.0.1",
		"typescript": "5.4.2",
		"typescript-esbuild": "0.4.5"
	},
	"publishConfig": {
		"access": "public"
	}
}
